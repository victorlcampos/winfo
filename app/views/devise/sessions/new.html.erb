<div class='form'>
  <h2>Entrar</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
    <p><%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: 'field' %></p>

    <p><%= f.label :password %><br />
    <%= f.password_field :password, class: 'field' %></p>

    <% if devise_mapping.rememberable? -%>
      <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
    <% end -%>

    <p><%= f.submit "Entrar" %></p>
  <% end %>
  <small> Para cadastrar é necessário ter convite.</small>
  <br />
  <%= render "devise/shared/links" %>
</div>