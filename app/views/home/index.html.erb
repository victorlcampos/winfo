<ins class="adsbygoogle"
  style="display:inline-block;width:728px;height:90px"
  data-ad-client="ca-pub-6378290968933321"
  data-ad-slot="5328507722"></ins>
<% @articles.each do |article| %>
  <article class="pure-g-r post-cover-1">
    <div class="pure-u-2-3">
      <div class="l-box splash-text">
        <h1 class="splash-head"><%= link_to article.title, article_path(article) %></h1>
        <time class="splash-date"><%=  article.posted_at %></time><address class="author">, por <%= article.name %></address>
        <div class="splash-subhead"><%= markdown(article.summary_body, false) %></div>
      </div>
    </div>
  </article>
<% end %>