<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Winfo</title>

    <meta property="og:site_name" content="Winfo"/>
    <%= yield :metadata %>

    <%= stylesheet_link_tag "application", media: "all" %>
    <%= yield :stylesheet %>
    <%= csrf_meta_tags %>

    <link href='//fonts.googleapis.com/css?family=Vollkorn%3A400%2C700|Patua+One' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Audiowide' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <script async src="http://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-42390968-1', 'winfo.me');
      ga('send', 'pageview');
    </script>
    <div class="content pure-g-r">
      <div class="header pure-u-1">
         <div class="header pure-u-1">
            <div class="pure-menu pure-menu-open pure-menu-horizontal">
               <%= link_to "Winfo", root_path, class: "pure-menu-heading" %>
               <ul class="main-menu">
                  <li><%= link_to "Últimos Artigos", root_url  %></li>
                  <li><%= link_to "Mais Lidos", root_url(order_by: "most_read")  %></li>
                  <li><%= link_to "Mais recomendados", root_url(order_by: "most_liked")  %></li>
               </ul>


               <ul class="user-menu">
                  <% if user_signed_in? %>
                    <li>Olá, <%= current_user.name %></li>
                    <li><%= link_to "Novo Artigo", new_article_path %></li>
                    <li><%= link_to "Enviar Convite", new_user_invitation_path %></li>
                    <li><%= link_to "Sair", destroy_user_session_path, method: :delete %></li>
                  <% else %>
                    <li><%= link_to "Entrar", new_user_session_path %></li>
                  <% end %>
               </ul>
             </div>
            <br style="clear:both;"/>
         </div>
      </div>
    </div>
    <div class="splash pure-u-1">
      <%= yield %>
    </div>
    <div class="footer pure-u-1">Winfo.me - Copyright 2013</div>
    <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
  </body>

  <%= javascript_include_tag "application" %>
  <%= yield :javascripts %>

  <!-- UserVoice JavaScript SDK (only needed once on a page) -->
  <script>(function(){var uv=document.createElement('script');uv.type='text/javascript';uv.async=true;uv.src='//widget.uservoice.com/8Nw9m9A7T6ZEgBBIDBAyA.js';var s=document.getElementsByTagName('script')[0];s.parentNode.insertBefore(uv,s)})()
  </script>

  <!-- A tab to launch the Classic Widget -->
  <script>
    UserVoice = window.UserVoice || [];
    UserVoice.push(['showTab', 'classic_widget', {
      mode: 'full',
      primary_color: '#cc6d00',
      link_color: '#007dbf',
      default_mode: 'support',
      forum_id: 214892,
      tab_label: 'Ajude a melhorar o Winfo.me',
      tab_color: '#cc6d00',
      tab_position: 'middle-right',
      tab_inverted: false
    }]);
  </script>
</html>